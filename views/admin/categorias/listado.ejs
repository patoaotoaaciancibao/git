<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Categorías - Admin</title>
    <%- include('../../partials/head') %>
</head>
<body>

<%- include('../../partials/navbar') %>

<div class="container py-5">
    <h1 class="mb-4 text-center">
        <i class="fas fa-folder-open me-2"></i> Categorías de Cursos
    </h1>

    <div class="d-flex justify-content-end mb-4">
        <a href="/admin/categorias/crear" class="btn btn-outline-success btn-lg shadow-sm px-4 rounded-pill">
            <i class="fas fa-plus me-2"></i> Nueva Categoría
        </a>
    </div>

    <% if (categorias.length === 0) { %>
        <p class="text-muted text-center">No hay categorías registradas aún.</p>
    <% } else { %>
        <% categorias.forEach(cat => { %>
            <div class="card mb-4 shadow-sm rounded-4">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center w-100 pe-3">
                        <% if (cat.imagen) { %>
                            <img src="/categorias/<%= cat.imagen %>" alt="Imagen de la categoría" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                        <% } else { %>
                            <img src="/categorias/generica.jpg" alt="Imagen genérica" class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                        <% } %>

                        <div>
                            <h5 class="card-title mb-2">
                                <i class="fas fa-tag text-primary me-2"></i>
                                <%= cat.nombre_categoria %>
                                <span class="badge bg-primary"><%= cat.cantidad_cursos %> cursos</span>
                            </h5>

                            <% if (cat.cursos.length > 0) { %>
                                <ul class="list-group list-group-flush mt-2">
                                    <% cat.cursos.forEach(curso => { %>
                                        <li class="list-group-item">
                                            <i class="fas fa-book me-2 text-dark"></i>
                                            <%= curso.nombre %>
                                        </li>
                                    <% }) %>
                                </ul>
                            <% } else { %>
                                <p class="text-muted mt-2"><em>No hay cursos en esta categoría.</em></p>
                            <% } %>
                        </div>
                    </div>

                    <div class="ms-3">
                        <a href="/admin/categorias/editar/<%= cat.id_categoria %>" class="btn btn-outline-warning rounded-pill shadow-sm">
                            <i class="fas fa-edit me-1"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>

    <div class="text-center mt-4">
        <a href="/admin/home" class="btn btn-primary">
            <i class="fas fa-arrow-left me-1"></i> Volver al Admin
        </a>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/assets/js/main.js"></script>
