<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>Estadísticas Generales - Panel Admin</title>
   <%- include('../partials/head')%>
</head>
<body class="bg-light">
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Cargando...</span>
        </div>
    </div>
    <%- include('../partials/navbar') %>
    
    <div class="container-fluid bg-primary py-5 mb-5 page-header">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Estadísticas Generales</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a class="text-white" href="/admin/home">Admin Home</a></li>
                            <li class="breadcrumb-item"><a class="text-white" href="#">Reportes</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Estadísticas</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center text-primary px-3">Reportes</h6>
                <h1 class="mb-5">Información del Sitio</h1>
            </div>
            <div class="row g-4 justify-content-center">
                <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-4 text-center">
                        <div class="card-body">
                            <i class="fas fa-book-open fa-4x text-primary mb-3"></i>
                            <h5 class="card-title fw-semibold mb-2">Cursos Publicados</h5>
                            <h1 class="display-4 fw-bold text-primary"><%= totalCursosPublicados %></h1>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-4 text-center">
                        <div class="card-body">
                            <i class="fas fa-book fa-4x text-secondary mb-3"></i>
                            <h5 class="card-title fw-semibold mb-2">Cursos No Publicados</h5>
                            <h1 class="display-4 fw-bold text-secondary"><%= totalCursosNoPublicados %></h1>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-4 text-center">
                        <div class="card-body">
                            <i class="fas fa-user-graduate fa-4x text-success mb-3"></i>
                            <h5 class="card-title fw-semibold mb-2">Total Alumnos</h5>
                            <h1 class="display-4 fw-bold text-success"><%= totalAlumnos %></h1>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3 wow fadeInUp" data-wow-delay="0.7s">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-4 text-center">
                        <div class="card-body">
                            <i class="fas fa-chalkboard-teacher fa-4x text-info mb-3"></i>
                            <h5 class="card-title fw-semibold mb-2">Total Profesores</h5>
                            <h1 class="display-4 fw-bold text-info"><%= totalProfesores %></h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-2 g-4 mt-4">

                <!-- Curso con más inscriptos -->
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-3 bg-light-subtle">
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-bold">
                                <i class="fas fa-chart-line me-2"></i> Curso con más inscriptos
                            </h5>
                            <p class="mb-1">
                                <%= cursoMasInscriptos.nombre_curso %> (ID: <%= cursoMasInscriptos.id_curso %>)
                            </p>
                            <a href="/admin/cursos/<%= cursoMasInscriptos.id_curso %>" class="btn btn-outline-primary btn-sm mt-2">Ver curso</a>
                        </div>
                    </div>
                </div>

                <!-- Curso con más secciones -->
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-3 bg-light-subtle">
                        <div class="card-body">
                            <h5 class="card-title text-success fw-bold">
                                <i class="fas fa-layer-group me-2"></i> Curso con más secciones
                            </h5>
                            <p class="mb-1">
                                <%= cursoMasSecciones.nombre_curso %> (ID: <%= cursoMasSecciones.id_curso %>)
                            </p>
                            <a href="/admin/cursos/<%= cursoMasSecciones.id_curso %>" class="btn btn-outline-success btn-sm mt-2">Ver curso</a>
                        </div>
                    </div>
                </div>

                <!-- Último alumno inscripto -->
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-3 bg-light-subtle">
                        <div class="card-body">
                            <h5 class="card-title text-warning fw-bold">
                                <i class="fas fa-user-plus me-2"></i> Último alumno inscripto
                            </h5>
                            <p class="mb-1">
                                <%= ultimaInscripcion.nombre_alumno %> (<%= ultimaInscripcion.email %>)
                            </p>
                            <p class="mb-1">Curso: <%= ultimaInscripcion.nombre_curso %> (ID: <%= ultimaInscripcion.id_curso %>)</p>
                            <p class="text-muted small">
                                Fecha: <%= ultimaInscripcion.fecha_formateada %>
                            </p>
                            <a href="/admin/cursos/<%= ultimaInscripcion.id_curso %>" class="btn btn-outline-warning btn-sm">Ver curso</a>
                        </div>
                    </div>
                </div>

                <!-- Usuario con más cursos -->
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-3 bg-light-subtle">
                        <div class="card-body">
                            <h5 class="card-title text-info fw-bold">
                                <i class="fas fa-users me-2"></i> Usuario con más cursos inscriptos
                            </h5>
                            <p><%= usuarioMasCursos.nombre_alumno %> - <%= usuarioMasCursos.total %> cursos</p>
                        </div>
                    </div>
                </div>

                <!-- Último usuario creado -->
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 h-100 p-3 bg-light-subtle">
                        <div class="card-body">
                            <h5 class="card-title text-dark fw-bold">
                                <i class="fas fa-user-clock me-2"></i> Último usuario creado
                            </h5>
                            <p class="mb-1"><%= ultimoUsuarioCreado.nombre %> (<%= ultimoUsuarioCreado.email %>)</p>
                            <p class="mb-1">ID: <%= ultimoUsuarioCreado.id_usuario %></p>
                            <p class="text-muted small">Fecha: <%= ultimaInscripcion.fecha_formateada %></p>
                        </div>
                    </div>
                </div>

            </div>


            <div class="mt-5 text-center">
                <a href="/admin/home" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Home Admin
                </a>
            </div>
        </div>
    </div>
    
    <%- include('../partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/lib/wow/wow.min.js"></script>
    <script src="/lib/easing/easing.min.js"></script>
    <script src="/lib/waypoints/waypoints.min.js"></script>
    <script src="/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>

</body>
</html>
