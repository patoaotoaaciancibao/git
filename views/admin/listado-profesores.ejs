<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Profesores Asignados</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<%- include('../partials/navbar') %>

<!-- Toast de mensajes -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1055">
  <% if (query && query.msg === 'asignacion-eliminada') { %>
    <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">✅ Asignación eliminada correctamente.</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>
  <% if (query && query.error === 'no-encontrado') { %>
    <div class="toast align-items-center text-dark bg-warning border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">⚠️ La asignación no fue encontrada.</div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>
  <% if (query && query.error === 'error-interno') { %>
    <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">❌ Ocurrió un error al intentar eliminar la asignación.</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  <% } %>
</div>

<div class="container mt-5">
    <div class="bg-white p-4 shadow-sm rounded">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary mb-0"><i class="fas fa-user-tie me-2"></i> Profesores Asignados</h2>
             <a href="/admin/asignar-profesor" class="btn btn-success  rounded-pill">
                <i class="fas fa-plus me-2"></i> Crear Asignación 
            </a>
        </div>
           
        <% if (asignaciones.length === 0) { %>
            <div class="alert alert-info text-center">No hay profesores asignados aún.</div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table align-middle table-striped border">
                    <thead class="table-dark">
                        <tr>
                            <th>ID Profesor</th>
                            <th>Nombre</th>
                            <th>ID Curso</th>
                            <th>Curso</th>
                            <th>Publicado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% asignaciones.forEach(a => { %>
                            <tr>
                                <td><%= a.id_usuario %></td>
                                <td><%= a.nombre_profesor %></td>
                                <td><%= a.id_curso %></td>
                                <td><%= a.titulo_curso %></td>
                                <td>
                                    <% if (Number(a.publicado) === 1) { %>
                                        <span class="badge bg-success px-3 py-2"><i class="fas fa-check-circle me-1"></i> Sí</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary px-3 py-2"><i class="fas fa-times-circle me-1"></i> No</span>
                                    <% } %>
                                </td>
                                <td class="d-flex gap-2">
                                    <a href="/cursos/<%= a.id_curso %>" target="_blank" class="btn btn-sm btn-outline-primary" title="Ver Curso">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/admin/asignaciones/eliminar/<%= a.id_asignacion %>" 
                                       class="btn btn-sm btn-outline-danger"
                                       onclick="return confirm('¿Estás segura de que querés eliminar esta asignación?');"
                                       title="Quitar Asignación">
                                       <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <div class="text-center mt-4">
        <a href="/admin/home" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i> Volver al Admin
        </a>
    </div>
</div>

<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toastElList = [].slice.call(document.querySelectorAll('.toast'));
        toastElList.forEach(function (toastEl) {
            const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
            toast.show();
        });

        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
</body>
</html>
