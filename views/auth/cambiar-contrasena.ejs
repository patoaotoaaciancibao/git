<%- include('../partials/head') %>

<div class="container mt-5">
  <h2>Cambiar contraseña</h2>

  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

  <% if (success) { %>
    <div class="alert alert-success"><%= success %></div>
  <% } %>

  <form action="/auth/cambiar-contrasena" method="POST">
    <div class="mb-3">
      <label for="actual" class="form-label">Contraseña actual</label>
      <input type="password" name="actual" id="actual" class="form-control" required>
    </div>
    <div class="mb-3">
      <label for="nueva" class="form-label">Nueva contraseña</label>
      <input type="password" name="nueva" id="nueva" class="form-control" required minlength="6">
    </div>
    <div class="mb-3">
      <label for="repetir" class="form-label">Repetir nueva contraseña</label>
      <input type="password" name="repetir" id="repetir" class="form-control" required minlength="6">
    </div>
    <button type="submit" class="btn btn-primary">Cambiar contraseña</button>
  </form>
</div>

<%- include('../partials/footer') %>
