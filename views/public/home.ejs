        </div>
        <div class="row g-3">
            <div class="col-lg-7 col-md-6">
                <div class="row g-3">
                    <% for (let i = 0; i < 3; i++) {
                        const cat = categoriasPopulares[i];
                    if (cat) { %>
                        <div class="col-lg-<%= i === 0 ? '12' : '6' %> col-md-12 wow zoomIn" data-wow-delay="<%= 0.1 + (i * 0.2) %>s">
                            <a class="position-relative d-block overflow-hidden" href="/categoria/<%= cat.id_categoria %>">
                                <img class="img-fluid" src="/categorias/<%= cat.imagen && cat.imagen.trim() !== '' ? cat.imagen : 'generica.jpg' %>" alt="<%= cat.nombre_categoria %>">
                                <div class="bg-white text-center position-absolute bottom-0 end-0 py-2 px-3" style="margin: 1px;">
                                    <h5 class="m-0"><%= cat.nombre_categoria %></h5>
                                    <small class="text-primary"><%= cat.cantidad_cursos %> Cursos</small>
                                </div>
                            </a>
                        </div>
                    <% } } %>
                </div>
            </div>

